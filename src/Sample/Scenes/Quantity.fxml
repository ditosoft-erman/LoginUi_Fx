<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="318.0" prefWidth="350.0" styleClass="background" stylesheets="@../../values/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Sample.QuantityController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label fx:id="quantityLabel" text="0">
      <font>
         <Font name="Inter Regular" size="82.0" />
      </font></Label>

    <HBox alignment="CENTER" prefHeight="63.0" prefWidth="310.0" spacing="10">
        <Button onAction="#incrementQuantity" styleClass="green-button" stylesheets="@style.css" text="+" textAlignment="CENTER">
         <font>
            <Font size="34.0" />
         </font></Button>
        <Button onAction="#resetQuantity" text="Reset" textAlignment="CENTER">
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
         <font>
            <Font name="Inter Regular" size="24.0" />
         </font></Button>
        <Button onAction="#decrementQuantity" styleClass="red-button" stylesheets="@style.css" text="-" textAlignment="CENTER">
         <font>
            <Font size="34.0" />
         </font></Button>
    </HBox>
   <Pane prefHeight="68.0" prefWidth="260.0" stylesheets="@style.css">
      <children>
         <Button fx:id="btn_back" layoutX="14.0" layoutY="19.0" mnemonicParsing="false" prefHeight="31.0" prefWidth="85.0" text="BACK" textAlignment="CENTER">
            <font>
               <Font name="Inter Regular" size="16.0" />
            </font>
         </Button>
      </children>
      <VBox.margin>
         <Insets top="30.0" />
      </VBox.margin>
   </Pane>

</VBox>
